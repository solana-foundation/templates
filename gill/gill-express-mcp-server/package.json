{
  "name": "gill-express-mcp-server",
  "displayName": "Gill Express MCP Server",
  "version": "1.0.0",
  "description": "Express-based MCP server template for Solana development using Gill SDK",
  "usecase": "Starter",
  "keywords": [
    "solana",
    "mcp",
    "model-context-protocol",
    "gill",
    "express",
    "typescript",
    "server",
    "ai-tools"
  ],
  "create-solana-dapp": {
    "rename": {
      "gill-express-mcp-server": {
        "to": "{{name}}",
        "paths": [
          "src"
        ]
      }
    },
    "instructions": [
      "To set up the .env file, run this:",
      "+{pm} run setup-env",
      "Add your PRIVATE_KEY and SOLANA_RPC_URL to the .env file",
      "To start the development server, run this:",
      "+{pm} run dev",
      "To build the project, run this:",
      "+{pm} run build",
      "To build the Docker image, run this:",
      "+{pm} run docker:build",
      "To run the Docker image, run this:",
      "+{pm} run docker:run"
    ]
  },
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "dev": "esrun --watch src/index.ts",
    "docker:build": "docker build -t gill-express-mcp-server:latest .",
    "docker:run": "docker run --rm --name gill-express-mcp-server -p 3000:3000 --env-file .env gill-express-mcp-server:latest",
    "fmt": "prettier --write .",
    "fmt:check": "prettier --check .",
    "lint": "eslint .",
    "setup-env": "shx test -e .env || shx cp .env.example .env",
    "start": "node ./dist/index.js",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "author": "",
  "license": "MIT",
  "packageManager": "pnpm@10.14.0",
  "dependencies": {
    "@modelcontextprotocol/sdk": "1.22.0",
    "cors": "2.8.5",
    "dotenv": "17.2.3",
    "express": "5.2.1",
    "gill": "0.14.0",
    "kleur": "4.1.5",
    "zod": "3.25.76"
  },
  "devDependencies": {
    "@types/cors": "2.8.19",
    "@types/express": "5.0.6",
    "@types/node": "24.10.1",
    "eslint": "9.39.1",
    "esrun": "3.2.30",
    "globals": "16.4.0",
    "prettier": "3.7.4",
    "shx": "0.4.0",
    "ts-node": "10.9.2",
    "tsup": "8.5.1",
    "typescript": "5.9.3",
    "typescript-eslint": "8.46.3"
  }
}
