{
  "name": "gill-node-script",
  "displayName": "Node Server",
  "description": "Node.js script with gill (based on @solana/kit)",
  "usecase": "Backend",
  "keywords": [
    "gill",
    "node",
    "solana-kit"
  ],
  "create-solana-dapp": {
    "rename": {
      "scaffold": {
        "to": "{{name}}",
        "paths": [
          "src"
        ]
      }
    }
  },
  "version": "1.0.0",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "ci": "npm run build",
    "dev": "esrun --watch src/index.ts",
    "fmt": "prettier --write .",
    "fmt:check": "prettier --check .",
    "lint": "eslint .",
    "start": "cross-env NODE_OPTIONS=--disable-warning=ExperimentalWarning esrun src/index.ts",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "license": "MIT",
  "devDependencies": {
    "@eslint/js": "^9.35.0",
    "@types/node": "^24.5.2",
    "@types/prompts": "^2.4.9",
    "cross-env": "^10.0.0",
    "dotenv": "^17.2.2",
    "eslint": "^9.35.0",
    "globals": "^16.4.0",
    "prettier": "^3.6.2",
    "typescript": "~5.9.2",
    "typescript-eslint": "^8.44.0"
  },
  "dependencies": {
    "esrun": "^3.2.30",
    "gill": "0.11.0",
    "kleur": "^4.1.5",
    "prompts": "^2.4.2",
    "ws": "^8.18.3"
  }
}
