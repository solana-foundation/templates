{
  "name": "gill-react-vite-tailwind-counter",
  "description": "React+Vite, Tailwind, gill (based on @solana/kit), Anchor Counter example, Wallet UI",
  "keywords": [
    "anchor-counter",
    "gill",
    "react",
    "solana-kit",
    "tailwind",
    "typescript",
    "vite",
    "wallet-ui"
  ],
  "create-solana-dapp": {
    "instructions": [
      "To configure the Anchor deployment keypair, run this:",
      "+{pm} run setup",
      "Run Anchor commands:",
      "+{pm} run anchor build | test | localnet | deploy"
    ],
    "rename": {
      "counter": {
        "to": "{{name}}",
        "paths": [
          "."
        ]
      },
      "scaffold": {
        "to": "{{name}}",
        "paths": [
          "src"
        ]
      }
    }
  },
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "anchor": "cd anchor && anchor",
    "anchor-build": "cd anchor && anchor build",
    "anchor-localnet": "cd anchor && anchor localnet",
    "anchor-test": "cd anchor && anchor test",
    "build": "tsc -b && vite build",
    "codama:js": "codama run js -c ./anchor/codama.js",
    "ci": "npm run build && npm run lint && npm run format:check && npm run codama:js",
    "dev": "vite",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "lint": "eslint .",
    "preview": "vite preview",
    "setup": "npm run anchor keys sync && npm run anchor build && npm run codama:js"
  },
  "dependencies": {
    "@radix-ui/react-avatar": "^1.1.10",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-slot": "^1.2.3",
    "@solana-mobile/wallet-standard-mobile": "^0.4.1",
    "@solana/webcrypto-ed25519-polyfill": "^2.3.0",
    "@tailwindcss/vite": "^4.1.12",
    "@tanstack/react-query": "^5.85.5",
    "@wallet-ui/react": "1.1.1",
    "@wallet-ui/tailwind": "1.1.1",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "gill": "0.10.2",
    "jotai": "^2.13.1",
    "lucide-react": "^0.540.0",
    "next-themes": "^0.4.6",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-error-boundary": "^6.0.0",
    "react-router": "^7.8.1",
    "sonner": "^2.0.7",
    "tailwind-merge": "^3.3.1",
    "tailwindcss": "^4.1.12",
    "tw-animate-css": "^1.3.7",
    "ws": "^8.18.3"
  },
  "devDependencies": {
    "@codama/cli": "^1.3.1",
    "@codama/nodes-from-anchor": "^1.2.5",
    "@codama/renderers-js": "^1.3.4",
    "@eslint/js": "^9.33.0",
    "@types/node": "^24.3.0",
    "@types/react": "^19.1.10",
    "@types/react-dom": "^19.1.7",
    "@vitejs/plugin-react": "^5.0.1",
    "eslint": "^9.33.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.3.0",
    "prettier": "^3.6.2",
    "typescript": "~5.9.2",
    "typescript-eslint": "^8.40.0",
    "vite": "^7.1.3",
    "vite-plugin-node-polyfills": "^0.24.0",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.2.4"
  }
}
