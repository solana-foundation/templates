{
  "name": "gill-next-permaweb-arns",
  "displayName": "AR.IO Network + ArNS",
  "description": "Next.js Solana dapp with one-command deployment to Arweave via AR.IO Network using permaweb-deploy CLI",
  "usecase": "Deployment",
  "keywords": [
    "arweave",
    "ar.io",
    "arns",
    "permaweb",
    "gill",
    "nextjs",
    "react",
    "solana-kit",
    "tailwind",
    "typescript",
    "wallet-ui",
    "decentralized-hosting",
    "permaweb-deploy"
  ],
  "create-solana-dapp": {
    "instructions": [
      "First, install dependencies:",
      "+{pm} install",
      "",
      "Build your application:",
      "+{pm} run build",
      "",
      "Deploy to Permaweb (interactive mode):",
      "+{pm} run deploy:interactive",
      "",
      "Or deploy directly with your ArNS name:",
      "+{pm} run deploy",
      "",
      "For staging deployments:",
      "+{pm} run deploy:staging",
      "",
      "Setup:",
      "1. Get an ArNS name at https://arns.app",
      "2. Create an Arweave wallet (https://arweave.app)",
      "3. Fund with Turbo Credits or use on-demand payment",
      "4. Set DEPLOY_KEY environment variable:",
      "   export DEPLOY_KEY=$(base64 -i wallet.json)",
      "",
      "For local development:",
      "+{pm} dev"
    ],
    "rename": {
      "scaffold": {
        "to": "{{name}}",
        "paths": [
          "src",
          "README.md",
          ".env.example"
        ]
      }
    }
  },
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "build": "next build",
    "dev": "next dev --turbopack",
    "start": "next start",
    "deploy": "pnpm build && permaweb-deploy deploy --arns-name YOUR_ARNS_NAME --deploy-folder out",
    "deploy:interactive": "pnpm build && permaweb-deploy deploy",
    "deploy:staging": "pnpm build && permaweb-deploy deploy --arns-name YOUR_ARNS_NAME --undername staging --deploy-folder out",
    "deploy:testnet": "pnpm build && permaweb-deploy deploy --arns-name YOUR_ARNS_NAME --ario-process testnet --deploy-folder out",
    "deploy:on-demand": "pnpm build && permaweb-deploy deploy --arns-name YOUR_ARNS_NAME --on-demand ario --max-token-amount 2.0 --deploy-folder out",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "lint": "next lint",
    "ci": "npm run build && npm run lint && npm run format:check"
  },
  "dependencies": {
    "@radix-ui/react-avatar": "^1.1.10",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-slot": "^1.2.3",
    "@solana-mobile/wallet-standard-mobile": "^0.4.1",
    "@tanstack/react-query": "^5.89.0",
    "@wallet-ui/react": "2.0.0",
    "@wallet-ui/react-gill": "2.0.0",
    "@wallet-ui/tailwind": "2.0.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "gill": "0.11.0",
    "jotai": "^2.14.0",
    "lucide-react": "^0.544.0",
    "next": "15.5.3",
    "next-themes": "^0.4.6",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-error-boundary": "^6.0.0",
    "sonner": "^2.0.7",
    "tailwind-merge": "^3.3.1",
    "tw-animate-css": "^1.3.8"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.1",
    "@tailwindcss/postcss": "^4.1.13",
    "@types/node": "^24.5.2",
    "@types/react": "^19.1.13",
    "@types/react-dom": "^19.1.9",
    "eslint": "^9.35.0",
    "eslint-config-next": "15.5.3",
    "permaweb-deploy": "^2.5.1",
    "prettier": "^3.6.2",
    "tailwindcss": "^4.1.13",
    "typescript": "^5.9.2",
    "ws": "^8.18.3"
  }
}
