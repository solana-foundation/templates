{
  "name": "x402-solana-rust",
  "displayName": "x402 Solana Rust",
  "version": "1.0.0",
  "description": "x402 payment server template for Solana with Rust",
  "usecase": "Payments",
  "bin": {
    "create-x402": "./create.js"
  },
  "scripts": {
    "postinstall": "node create.js"
  },
  "keywords": [
    "solana",
    "x402",
    "rust",
    "payments",
    "api",
    "axum",
    "actix",
    "rocket"
  ],
  "create-solana-dapp": {
    "instructions": [
      "x402 Solana Rust Server Created!",
      "",
      "Your server has been configured and is ready to use.",
      "",
      "Next steps:",
      "+cd {{name}}",
      "",
      "Start your server:",
      "+cargo run",
      "",
      "Your server will be available at http://localhost:3000",
      "",
      "Test your API:",
      "+curl http://localhost:3000/api/health",
      "+curl http://localhost:3000/api/free",
      "+curl http://localhost:3000/api/paid",
      "",
      "Learn more:",
      "- x402 Protocol: https://x402.org",
      "- Solana x402 Guide: https://solana.com/developers/guides/getstarted/intro-to-x402",
      "- Documentation: README.md"
    ],
    "rename": {
      "x402-solana-rust": {
        "to": "{{name}}",
        "paths": [
          "Cargo.toml",
          "README.md",
          "src"
        ]
      }
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/crypto-priest/x402-solana-rust"
  },
  "license": "MIT"
}
