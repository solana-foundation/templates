{
  "name": "privy-auth",
  "displayName": "Privy Auth",
  "description": "Next.js + Tailwind template demonstrating Privy authentication for Solana dApps",
  "usecase": "Identity",
  "keywords": [
    "privy",
    "authentication",
    "social-login",
    "embedded-wallet",
    "nextjs",
    "tailwind",
    "typescript",
    "solana"
  ],
  "create-solana-dapp": {
    "instructions": [
      "Install dependencies:",
      "+{pm} install",
      "Create a local environment file:",
      "+cp .env.example .env.local",
      "Add your Privy App ID to .env.local",
      "Start the development server:",
      "+{pm} dev"
    ]
  },
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "eslint",
    "ci": "npm run build && npm run lint && npm run format:check",
    "format": "prettier --write .",
    "format:check": "prettier --check ."
  },
  "dependencies": {
    "@privy-io/react-auth": "^3.14.1",
    "@solana-program/memo": "^0.11.0",
    "@solana-program/system": "^0.12.0",
    "@solana/kit": "^6.1.0",
    "@solana/web3.js": "^1.98.4",
    "next": "16.1.6",
    "react": "19.2.3",
    "react-dom": "19.2.3"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "eslint": "^9",
    "eslint-config-next": "16.1.6",
    "prettier": "^3.6.2",
    "tailwindcss": "^4",
    "typescript": "^5"
  }
}
