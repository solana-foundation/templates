{
  "name": "template-next-tailwind-basic",
  "description": "Next.js, Tailwind, basic Anchor example, gill (based on @solana/kit), Wallet UI",
  "keywords": [
    "anchor-basic",
    "gill",
    "nextjs",
    "react",
    "solana-kit",
    "tailwind",
    "typescript",
    "wallet-ui"
  ],
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "anchor": "cd anchor && anchor",
    "anchor-build": "cd anchor && anchor build",
    "anchor-client": "esrun ./anchor/src/generate-client.ts",
    "anchor-localnet": "cd anchor && anchor localnet",
    "anchor-test": "cd anchor && anchor test",
    "build": "next build",
    "codama:js": "codama run js && prettier --write anchor/src/client/js",
    "ci": "npm run build && npm run lint && npm run format:check && npm run codama:js",
    "dev": "next dev --turbopack",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "lint": "next lint",
    "start": "next start"
  },
  "dependencies": {
    "@codama/cli": "^1.1.1",
    "@codama/nodes-from-anchor": "^1.2.0",
    "@codama/renderers-js": "^1.2.14",
    "@radix-ui/react-dialog": "^1.1.14",
    "@radix-ui/react-dropdown-menu": "^2.1.15",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-slot": "^1.2.3",
    "@tanstack/react-query": "^5.80.7",
    "@wallet-ui/react": "1.1.0-canary-20250614160139",
    "@wallet-ui/tailwind": "1.1.0-canary-20250614160139",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "codama": "^1.3.0",
    "gill": "^0.10.1",
    "jotai": "^2.12.5",
    "lucide-react": "^0.516.0",
    "next": "15.3.3",
    "next-themes": "^0.4.6",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-error-boundary": "^6.0.0",
    "sonner": "^2.0.5",
    "tailwind-merge": "^3.3.1",
    "tw-animate-css": "^1.3.4"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.1",
    "@tailwindcss/postcss": "^4.1.10",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.0.3",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "eslint": "^9.29.0",
    "eslint-config-next": "15.3.3",
    "esrun": "^3.2.30",
    "jest": "^30.0.0",
    "prettier": "^3.5.3",
    "tailwindcss": "^4.1.10",
    "typescript": "^5.8.3",
    "ws": "^8.18.2"
  },
  "create-solana-dapp": {
    "rename": {
      "basic": {
        "to": "{{name}}",
        "paths": [
          "."
        ]
      },
      "scaffold": {
        "to": "{{name}}",
        "paths": [
          "src"
        ]
      }
    }
  }
}
